<Window x:Class="PayrollSystem.UI.ChangeSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeSalaryWindow" Height="139" Width="293" MinHeight="139" MinWidth="293">
    <Grid>
        <StackPanel>
            <TextBlock Text="Новый оклад: " FontSize="15" Margin="5"></TextBlock>
            <TextBox x:Name="SalaryTextBox" FontSize="15" Margin="5"></TextBox>
            <Button Content="Изменить" FontSize="15" Margin="15 5 15 5" Click="ChangeSalaryClick"></Button>
        </StackPanel>
    </Grid>
</Window>
