<Window x:Class="PayrollSystem.UI.DeleteDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удалить отдел" Height="116" Width="492" MinHeight="116" MinWidth="392">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="DepartmentsComboBox" FontSize="15" Margin="15 5 15 5">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path = Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Delete" FontSize="15" Margin="20 5 20 5" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
